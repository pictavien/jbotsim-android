<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="io.jbotsim.ui.android.examples">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
            android:enabled="true"
            android:icon="@drawable/ic_jbotsim_demo"
            android:label="@string/app_name"
            android:allowBackup="false"
            tools:ignore="GoogleAppIndexingWarning">

        <activity
                android:name=".JBotSimAndroidExamples">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="io.jbotsim.ui.android.AndroidViewerActivity"
                  android:parentActivityName=".JBotSimAndroidExamples" />
    </application>
</manifest>
